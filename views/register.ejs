<%- include('common/header') %>

<title><%= title %></title>
<link rel="stylesheet" href="stylesheets/register.css">
<script src="javascript/register-script.js" defer></script>
</head>

<body>
<!--start of register page-->
<div class="register-page" id="register">

    <!--    start of register form-->
    <div class="wrapper">
        <div class="title">
            Registration Form
        </div>
        <div class="form">
            <div class="input-field">
                <label>First Name</label>
                <input type="text" id="firstname" class="input" name="firstname" pattern="[A-Za-z]{2,30}"
                       title="First Name must be at least 2 and 30 max characters long! Only letters allowed!" required>
            </div>
            <div class="input-field">
                <label>Last Name</label>
                <input type="text" id="lastname" class="input" name="lastname" pattern="[A-Za-z]{2,30}"
                       title="Last Name must be at least 2 and 30 max characters long! Only letters allowed!" required>
            </div>
            <div class="input-field">
                <label>Username</label>
                <input type="text" id="username" class="input" name="username" pattern="[A-Za-z0-9]{2,30}"
                       title="Username must be at least 5 and 30 max characters long! Only letters and numbers allowed!"
                       required>
            </div>
            <div class="input-field">
                <label>Password</label>
                <input type="password" id="password" class="input" name="password" pattern="{6,50}"
                       title="Password must be at least 6 characters long!!" required>
            </div>
            <div class="input-field">
                <label>Confirm Password</label>
                <input type="password" id="confirm_password" class="input" name="password" pattern="{6,50}"
                       title="Password must be at least 6 characters long!!" required>
            </div>

            <div class="input-field">
                <label>Email Address</label>
                <input type="email" id="email" class="input" name="email" pattern="{10,60}"
                       title="Email must be at least 10 characters long!!" required>
            </div>
            <div class="input-field">
                <label>Phone Number</label>
                <input type="text" id="phone" class="input" name="phone"
                       oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');"
                       title="Only numbers allowed!!" required>
            </div>
            <div class="input-field">
                <label>Gender</label>
                <div class="custom_select">
                    <select id="gender" name="gender" required>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="prefer-not-to-say">Prefer not to say</option>
                    </select>
                </div>
            </div>
            <div class="input-field">
                <label for="country">Country</label>
                <div class="custom_select">
                    <select id="country" name="country" class="form-countries" required>
                        <option value="">Select</option>
                    </select>
                </div>
            </div>
            <div class="input-field">
                <label>City</label>
                <input type="text" id="city" name="city" class="input" required>
            </div>

            <div class="button-div">
                <input type="submit" id="register-button" value="Register" class="register-button">
            </div>
        </div>
    </div>

</div>

<%- include('common/footer') %>

