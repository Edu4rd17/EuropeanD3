<header class="header" id="header">
    <p class="logo"><i class="fas fa-mask"></i>Fuerza</p>
    <nav class="navbar">
        <a href="/">Home</a>
        <a href="/customs">Custom Graphs</a>
        <% if (!username) { %>
            <a href="/login">Login</a>
            <a href="/register">Register</a>
        <% } else if(username) { %>
            <a href="/userInfo?userId=<%= userId %>" class="view-info"><%= firstname %></a>
            <form method="post" action="/logout">
                <button class="logout-button">Log out</button>
            </form>
        <% } %>
    </nav>
    <div id="menu-btn" class="fa-solid fa-bars fa-2x">
    </div>
</header>

<% if (!username) { %>
    <style>
        .login {
            display: inline-block;
        }

        .register {
            display: inline-block;
        }

        .user-logged {
            display: none;
        }

        .logout {
            display: none;
        }

        @media (max-width: 1200px) {
            .login {
                display: block;
            }

            .register {
                display: block;
            }
        }
    </style>
<% } else if(username) { %>

    <style>
        .login {
            display: none;
        }

        .register {
            display: none;
        }

        .user-logged {
            display: inline-block;
        }

        .logout {
            display: inline-block;
        }

        @media (max-width: 1200px) {
            .user-logged {
                display: block;
            }

            .logout {
                display: block;
            }
        }
    </style>
<% } %>